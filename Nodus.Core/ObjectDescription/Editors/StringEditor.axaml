<dsc:PropertyEditorControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dsc="clr-namespace:Nodus.Core.ObjectDescription"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Nodus.Core.ObjectDescription.StringEditor"
             x:DataType="dsc:StringEditorContentViewModel">
    
    <Grid ColumnDefinitions="8*,1*">
        <TextBox Name="Field" MinHeight="28" MaxWidth="300" MaxLines="8" TextWrapping="Wrap" FontSize="13" Margin="0 5 0 0"/>
        <Button Grid.Column="1" Content="Bind" VerticalAlignment="Center" Margin="5 0"/>
    </Grid>
    
</dsc:PropertyEditorControl>
