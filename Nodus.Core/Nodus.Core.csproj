<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Library</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    </PropertyGroup>


    <ItemGroup>
        <PackageReference Include="Avalonia" Version="11.0.2"/>
        <PackageReference Include="Avalonia.Desktop" Version="11.0.2"/>
        <PackageReference Include="Avalonia.Themes.Fluent" Version="11.0.2"/>
        <PackageReference Include="Avalonia.Fonts.Inter" Version="11.0.2"/>
        <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
        <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="11.0.2"/>
        <PackageReference Include="ReactiveUI" Version="18.3.1" />
    </ItemGroup>


    <ItemGroup>
      <None Remove="Assets\Fonts\Nunito.ttf" />
      <None Remove="Assets\Fonts\FontAwesome.ttf" />
      <None Remove="Assets\Fonts\FontAwesome.otf" />
    </ItemGroup>


    <ItemGroup>
      <Folder Include="Assets\Fonts\" />
      <Folder Include="Controls\Input\" />
    </ItemGroup>


    <ItemGroup>
      <None Remove="Assets\Shaders\LoadingBackground.glsl" />
      <AvaloniaResource Include="Assets\Shaders\LoadingBackground.glsl" />
      <None Remove="Assets\Shaders\Particles.glsl" />
      <AvaloniaResource Include="Assets\Shaders\Particles.glsl" />
      <None Remove="Assets\Shaders\ParticlesUnfiforms.uniforms" />
      <AvaloniaResource Include="Assets\Shaders\ParticlesUnfiforms.uniforms" />
      <None Remove="Assets\Shaders\Tint.glsl" />
      <AvaloniaResource Include="Assets\Shaders\Tint.glsl" />
    </ItemGroup>


    <ItemGroup>
      <Compile Update="ObjectDescription\PropertyEditor.axaml.cs">
        <DependentUpon>PropertyEditor.axaml</DependentUpon>
        <SubType>Code</SubType>
      </Compile>
    </ItemGroup>
</Project>
