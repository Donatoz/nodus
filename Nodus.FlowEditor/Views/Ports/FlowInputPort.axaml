<v:FlowPort xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="clr-namespace:FlowEditor.Views"
             xmlns:cc="clr-namespace:Nodus.Core.Controls;assembly=Nodus.Core"
             xmlns:vm="clr-namespace:FlowEditor.ViewModels"
             xmlns:c="clr-namespace:FlowEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FlowEditor.Views.FlowInputPort"
             x:DataType="vm:FlowPortViewModel">
    <DockPanel Name="Container">
        <Border Name="Handler" ClipToBounds="False" Classes="port flow-port" />
        <TextBlock Text="{Binding Label}" Foreground="White" Classes="h5" FontWeight="Light"
                   VerticalAlignment="Center" Margin="4 0 0 0" />
    </DockPanel>
</v:FlowPort>
