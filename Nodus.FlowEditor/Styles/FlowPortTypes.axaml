<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <StyleInclude Source="avares://Nodus.NodeEditor/Styles/CommonPortTypes.axaml"/>
    
    <Style Selector="Border.port-value-type-FlowType">
        <Setter Property="BorderBrush" Value="{StaticResource AscentActiveHighlight}"/>
        
        <Style Selector="^.port-type-output">
            <Setter Property="CornerRadius" Value="25 0 0 25"/>
        </Style>
        
        <Style Selector="^.port-type-input">
            <Setter Property="CornerRadius" Value="0 25 25 0"/>
        </Style>
        
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{StaticResource AscentActiveHighlight}"/>
        </Style>
    </Style>
    
</Styles>
