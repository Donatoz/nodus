<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style Selector="Border.flow-port">
        <Setter Property="BorderBrush" Value="#b3b3b3"/>
        
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="#ededed"/>
        </Style>
    </Style>
    
    <Style Selector="Border.flow-node-resolve-effect">
        <Setter Property="Margin" Value="-5"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Background" Value="{StaticResource AscentActiveSaturated}"/>
        <Setter Property="Effect" Value="blur(20)"/>

        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.1" Easing="CubicEaseInOut"/>
            </Transitions>
        </Setter>
        
        <Style Selector="^.visible">
            <Setter Property="Opacity" Value="0.4"/>
        </Style>
        <Style Selector="^.invisible">
            <Setter Property="Opacity" Value="0"/>
        </Style>
    </Style>
    
</Styles>
